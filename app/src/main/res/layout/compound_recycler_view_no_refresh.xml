<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <include
            layout="@layout/partial_empty_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <include
            layout="@layout/partial_loading_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"/>

        <include
            layout="@layout/partial_error_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <com.shinobi.todo.widget.recycler_view.ELERecyclerView
            android:id="@+id/recycler_ele"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:paddingTop="@dimen/dimen_4"
            android:paddingLeft="@dimen/spacing_tiny"
            android:paddingRight="@dimen/spacing_tiny"
            android:paddingBottom="@dimen/spacing_tiny"
            android:transitionGroup="true"
            />

    </RelativeLayout>

</merge>